#include <bits/stdc++.h>
using namespace std;

int main() {
   

     int t;
     cin>>t;
     while(t--){
         int n, x;
         cin>>n>>x;
         vector<int> pump(n);
         for(int i=0;i<n;i++){
             cin>>pump[i];
         }
         int maxi=pump[0]-0;
         for(int i=0;i<n-1;i++){
             int diff=pump[i+1]-pump[i];
             maxi=max(maxi,diff);
         }
         maxi=max(maxi,2*(x-pump[n-1]));
         cout<<maxi<<endl;
         
     }

}
