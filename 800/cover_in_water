#include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    int n;
	    string str;
	    cin>>n;
	    cin>>str;
	    bool flag=false;
	    int ans=0;
	    for(int i=0;i<n;i++){
	        int cnt=0;
	        while(i<n && str[i]=='.'){
	            cnt++;
	            i++;
	        }
	        if(cnt>2){
	            ans=2;
	            break;
	        }else{
	            ans+=cnt;
	        }
	    }
	    cout<<ans<<endl;
	}

}
